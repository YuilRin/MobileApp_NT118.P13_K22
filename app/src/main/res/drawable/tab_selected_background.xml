<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Hình dạng là hình chữ nhật -->
    <solid android:color="#55D1D1D1"/> <!-- Màu nền trắng cho tab đang được chọn -->

    <!-- Góc bo tròn cho tab -->
    <corners android:radius="16dp"/>

    <!-- Đặt viền cho tab đang được chọn để thêm phần nổi bật -->
    <stroke
        android:width="2dp"
        android:color="#4A4A4A"/> <!-- Viền màu xám đậm -->

    <!-- Padding cho tab để nội dung không bị ép sát vào mép -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>
</shape>
