<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/business_shape_white"
    android:id="@+id/item_product">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lb_product_tensp"
        android:text="Tên sản phẩm"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lb_product_ncc"
        android:text="Nhà cung cấp: "
        android:textColor="@color/black"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="@id/lb_product_tensp"
        app:layout_constraintTop_toBottomOf="@+id/lb_product_tensp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lb_product_phanloaisp"
        android:text="Phan loai"
        android:textColor="@color/black"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/lb_product_ncc"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lb_product_giavon"
        android:text="Giá vốn: 0"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/lb_product_ncc"
        app:layout_constraintTop_toBottomOf="@+id/lb_product_ncc"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lb_product_giaban"
        android:text="Giá bán: 0"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/lb_product_giavon"
        app:layout_constraintBottom_toBottomOf="@id/lb_product_giavon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_product_masp"
        android:text="Mã sản phẩm"
        android:textColor="@color/black"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/lb_product_tensp"/>
</androidx.constraintlayout.widget.ConstraintLayout>