<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/dialog_background_debt_personal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginBottom="16dp">



        <TextView
            android:id="@+id/tv_NhanDan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sửa nợ"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginRight="30dp"
            android:paddingBottom="16dp" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sửa" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_select_image"
        android:layout_marginRight="@dimen/txt_size_12sp"
        android:layout_gravity="center"
        android:padding="@dimen/txt_size_12sp"
        >
        <ImageView
            android:id="@+id/imv_show_image"
            android:layout_width="32dp"
            android:layout_height="32dp"

            />
    </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ChonAnh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_select_image"
            android:text="Chọn ảnh đại diện cho thể loại"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|start"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            />


    </LinearLayout>



    <EditText
        android:id="@+id/etNoiDungNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nội dung nợ:"
        android:inputType="text" />

    <EditText
        android:id="@+id/etSoTienNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số tiền nợ:"
        android:inputType="numberDecimal"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/etNguonNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nguồn nợ:"
        android:inputType="text"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/etNgayNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ngày nợ:"
        android:inputType="date"
        android:drawableEnd="@drawable/ic_calendar"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/etNgayDenHan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ngày đến hạn:"
        android:inputType="date"
        android:drawableEnd="@drawable/ic_calendar"
        android:layout_marginTop="8dp" />
</LinearLayout>
